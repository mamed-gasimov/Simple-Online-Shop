<!-- We changed enctype from default for form element beacuse we will submit in our form file element -->
<!-- That's why we need enctype="multipart/form-data". Also because we use it, we can't inject here csrf token 
with hidden input. That's why we use here query params for that. -->
<form action="<%= submitPath %>?_csrf=<%= locals.csrfToken %>" method="POST" enctype="multipart/form-data">
    <p>
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<%= product.title %>" required>
    </p>
    <p>
        <label for="image">Image</label>
        <input type="file" name="image" id="image" accept="image/jpg, image/png" 
            <% if (imageRequired) { %>required<% } %>
        >
    </p>
    <p>
        <label for="summary">Summary</label>
        <input type="text" name="summary" id="summary" maxlength="250" value="<%= product.summary %>" required>
    </p>
    <p>
        <label for="price">Price</label>
        <input type="number" name="price" id="price" min="0.01" step="0.01" value="<%= product.price %>" required>
    </p>
    <p>
        <label for="description">Description</label>
        <textarea name="description" id="description" rows="7" required><%= product.description %></textarea>
    </p>
    <p>
        <button type="reset" class="btn btn-alt">Reset</button>
        <button type="submit" class="btn">Save</button>
    </p>
</form>